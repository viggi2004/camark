<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_bg"
    tools:context=".Rollno" >

    <ImageView
        android:id="@+id/collegeLogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/college_logo" />

    <ImageView
        android:id="@+id/rollNumberText"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/collegeLogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:src="@drawable/enter_rollnumber_text" />

    <EditText
        android:id="@+id/rollnotext"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/rollNumberText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_text_bg"
        android:ems="10"
        android:gravity="center"
        android:inputType="text" >

        <requestFocus />
    </EditText>

    <com.vadapoche.camark.view.MyButton
        android:id="@+id/rollnobtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rollnotext"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_submitbutton"
        android:background="#A6A1A1"
        android:paddingBottom="10dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:paddingTop="10dp"
        android:text="SUBMIT"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:textStyle="bold" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@null"
        android:onClick="showDevelopers"
        android:src="@drawable/selector_developer_icon" />

    <com.vadapoche.camark.view.MyTextView
        android:id="@+id/noInternetMessage"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="#aa000000"
        android:gravity="center"
        android:text="No Internet Connection"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold" />

</RelativeLayout>